<div class="container mt-5 bg-secondary rounded">
  <div class="row">
    <div class="col-md-6">
      <h2>Booking Requests for Your Dog</h2>
      <% if @dog_bookings.empty? %>
        <p>No bookings.</p>
      <% else %>
        <ul class="list-group">
          <% @dog_bookings.each do |booking| %>
            <li class="list-group-item">
              <p>Booking Date: <%= booking.date %></p>
              <p>Dog Name: <%= Dog.find_by(id: booking.dog_id).name %></p>
              <p>Walker Comment: <%= booking.comment %></p>
              <p>Status: <%= booking.status %></p>
              <% if booking.status == 'pending' %>
                <%= button_to 'Accept', accept_booking_path(booking), method: :patch, class: 'btn btn-success btn-rounded me-2' %>
                <%= button_to 'Decline', decline_booking_path(booking), method: :patch, class: 'btn btn-danger btn-rounded' %>
              <% end %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="col-md-6 ">
      <h2>Your Booking Requests</h2>
      <% if @user_bookings.empty? %>
        <p>No bookings.</p>
      <% else %>
        <ul class="list-group">
          <% @user_bookings.each do |booking| %>
            <li class="list-group-item">
              <p>Booking Date: <%= booking.date %></p>
              <p>Dog Name: <%= Dog.find_by(id: booking.dog_id).name %></p>
              <p>Walker Comment: <%= booking.comment %></p>
              <p>Status: <%= booking.status %></p>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <%= link_to 'Back to all Dogs', dogs_path, class: 'btn btn-secondary' %>
  </div>
</div>
