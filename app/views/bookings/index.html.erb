<div class="container">

   <div class="cards" style="width: 27rem;">
      <h2>Your Dog's Booking Requests</h2>
      <div class="card-product-create">

          <% if @dog_bookings.empty? %>
            <p>No bookings.</p>
          <% else %>
        <!--<ul class="list-group">-->
          <% @dog_bookings.each do |booking| %>
            <!--<li class="list-group-item">-->
              <p>Booking Date: <%= booking.date %></p>
              <p>Dog Name: <%= Dog.find_by(id: booking.dog_id).name %></p>
              <p>Walker Comment: <%= booking.comment %></p>
              <p>Status: <%= booking.status %></p>
              <% if booking.status == 'pending' %>
                <%= button_to 'Accept', accept_booking_path(booking), method: :patch, class: 'btn-secondary' %>
                <%= button_to 'Decline', decline_booking_path(booking), method: :patch, class: 'btn-secondary' %>
              <% end %>
            <!--</li>-->
          <% end %>
        <!--</ul>-->
        <% end %>
    </div>
</div>

    <div class="cards" style="width: 27rem;">
      <h2>Your Booking Requests</h2>
       <div class="card-product-create">

      <% if @user_bookings.empty? %>
        <p>No bookings.</p>
      <% else %>
        <ul class="list-group">
          <% @user_bookings.each do |booking| %>
            <li class="list-group-item">
              <p>Booking Date: <%= booking.date %></p>
              <p>Dog Name: <%= Dog.find_by(id: booking.dog_id).name %></p>
              <p>Walker Comment: <%= booking.comment %></p>
              <p>Status: <%= booking.status %></p>
            </li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <!--<div class="mt-3">-->
    <%= link_to 'Back to all Dogs', dogs_path, class: 'btn btn-secondary' %>
  </div>
</div>
  </div>
</div>
