<div class="container-bookings">
   <div class="cards-product-bookings" style="width: 27rem;">
      <h2 class="dog-heading">Your Pup's Booking Requests</h2>
      <div class="card-product-create">
          <% if @dog_bookings.empty? %>
            <p>No bookings.</p>
          <% else %>
        <ul class="list-group">
          <% @dog_bookings.each do |booking| %>
            <li class="list-group-item">
              <p>Booking Date: <%= booking.date %></p>
              <p>Dog Name: <%= Dog.find_by(id: booking.dog_id).name %></p>
              <p>Walker Comment: <%= booking.comment %></p>
              <p>Status: <%= booking.status %></p>
              <% if booking.status == 'pending' %>
              <div class="button-container">
                <%= button_to 'Accept', accept_booking_path(booking), method: :patch, class: 'btn-secondary' %>
                <%= button_to 'Decline', decline_booking_path(booking), method: :patch, class: 'btn-secondary' %>
              </div>
              <% end %>
          </li>
          <% end %>
        </ul>
        <% end %>
    </div>
</div>
