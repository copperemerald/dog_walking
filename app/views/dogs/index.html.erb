  <h2> Dogs available for walks</h2>
<div class="container-large">

    <%= form_with url: dogs_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a Pup"%>
      <%= submit_tag "Woof !", name: "", class: "btn btn-secondary" %>
    <% end %>

</div>
<!--#parent div-->
<div class="container-parent">
  <div class="card-container">
    <% if @dogs.any? %>
      <% @dogs.each do |dog| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= link_to dog.name, dog_path(dog) %></h2>
          <p><%= dog.description %></p>
          <p><%= dog.location %></p>
        </div>
          <% if dog.photo.attached? %>
            <%= cl_image_tag dog.photo.key, crop: :fill %>
              <% else %>
              <p>No Image Uploaded</p>
              <% end %>
      </div>
      <% end %>
        <% else %>
      <p>Sorry, no dogs found</p>
    <% end %>
  </div>
  <div class="container-map"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
