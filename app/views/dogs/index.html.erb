<div class="container">
<br>

  <div class="cards" style="width: 27rem;">
    <h2>Dogs available for walks</h2>

    <% @dogs.each do |dog| %>
      <div class="card-product">
        <div class="card-product-infos">
          <h2><%= link_to dog.name, dog_path(dog) %></h2>
          <p><%= dog.description %></p>
          <p><%= dog.location %></p>
        </div>
        <% if dog.photo.attached? %>
          <%= cl_image_tag dog.photo.key, crop: :fill %>
        <% else %>
          <p>No Image Uploaded</p>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= link_to "Add a Dog", new_dog_path, class: "btn btn-secondary" %>
</div>
