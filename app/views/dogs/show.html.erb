<div class="container">
  <br>
  <br>
  <h1> Find out all about <strong><%= @dog.name %></strong></h1>
  <br>
  <h4><%= @dog.description %></h4>
  <p><%= @dog.location %></p>
   <% if @dog.photo.attached? %>
    <%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
    <p>No Image Uploaded</p>
  <% end %>

   <%= link_to "Book this pup", new_dog_booking_path(@dog), class: "btn btn-secondary" %>
   <%= link_to "Back to all dogs", dogs_path, class: "btn btn-outline-dark" %>
</div>
